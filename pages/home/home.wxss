.empty image{
  width: 359rpx;
  height: 220rpx;
  margin: 184rpx auto 30rpx auto;
}
.empty text{
  color: #888888;
  margin-bottom: 80rpx;
}
.empty button{
  width: 322rpx;
}

.block{
  width: 335rpx;
  box-shadow: 2px 2px 5px #ccc;
  margin-left: 30rpx;
  margin-top: 30rpx;
  display: inline-block;
  border-radius: 2px;
  overflow: hidden;
  color: #fff;
  text-align: center;
}
.title{
  display: inline-block;
  margin: 15rpx 0;
}
.block .seperator{
  width: 325rpx;
  margin: 0 auto;
  height: 1px;
  background: #fff;
  box-shadow: 0px 1px 1px #000;
}
.time{
  display: inline-block;
  margin-top: 40rpx;
}
.amount{
  display: block;
}
.count{
  display: block;
  margin-top: 30rpx;
}
.body{
  height: 300rpx;
  text-shadow: 0px 1px #000;
}
.block .foot{
  height: 80rpx;
  color: #414141;
  text-align: left;
  padding: 0 20rpx;
}
.block .foot image{
  width:33rpx;
  height: 33rpx;
}