page{
  background: #fff;
}
.empty image{
  width: 359rpx;
  height: 220rpx;
  margin: 184rpx auto 30rpx auto;
}
.empty text{
  color: #888888;
  margin-bottom: 80rpx;
}
.empty button{
  width: 322rpx;
}

.block{
  width: 335rpx;
  box-shadow: 2px 2px 5px #ccc;
  margin-left: 30rpx;
  margin-top: 30rpx;
  display: inline-block;
  border-radius: 2px;
  overflow: hidden;
  color: #fff;
  text-align: center;
}
.title{
  display: inline-block;
  margin: 15rpx 0;
}
.block .seperator{
  width: 325rpx;
  margin: 0 auto;
  height: 1px;
  background: #fff;
  box-shadow: 0px 1px 1px #414141;
}
.time{
  display: inline-block;
  margin-top: 40rpx;
}
.amount{
  display: block;
}
.count{
  display: block;
  margin-top: 30rpx;
}
.body{
  height: 300rpx;
  text-shadow: 0px 1px #000;
  position: relative;
  overflow: hidden;
}
.block .foot{
  height: 80rpx;
  color: #414141;
  text-align: left;
  padding: 0 20rpx;
}
.block .foot button{
  background: transparent;
  border: none;
  padding: 0 0 0 30rpx;
  line-height: 80rpx;
}
.block .foot button::after{
  border: none;
}
.block .foot image{
  width:33rpx;
  height: 33rpx;
}
.qrcode{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 80rpx;
  left: 67rpx;
  display: none;
}
.qrcode.show{
  display: block;
}
.qrIcon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
  background: #fff;
}
.qrIcon image{
  width: 32rpx;
  height: 32rpx;
  margin: 9rpx;
}
.trangle_wrapper{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 32rpx;
  height: 32rpx;
  overflow: hidden;
}
.trangle{
  width: 45rpx;
  height: 45rpx;
  transform: rotate(-45deg);
  left: -65%;
  top: 25%;
  position: absolute;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 5rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}