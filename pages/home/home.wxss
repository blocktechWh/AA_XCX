page{
  background: #fff;
}
.empty image{
  width: 359rpx;
  height: 220rpx;
  margin: 184rpx auto 30rpx auto;
}
.empty text{
  color: #888888;
  margin-bottom: 80rpx;
}
.empty button{
  width: 322rpx;
}

.block{
  width: 335rpx;
  box-shadow: 2px 2px 5px #ccc;
  margin-left: 30rpx;
  margin-top: 30rpx;
  display: inline-block;
  border-radius: 2px;
  overflow: hidden;
  color: #fff;
  text-align: center;
}
.title{
  display: inline-block;
  margin: 15rpx 0;
}
.block .seperator{
  width: 325rpx;
  margin: 0 auto;
  height: 1px;
  background: #fff;
  box-shadow: 0px 1px 1px #414141;
}
.time{
  display: inline-block;
  margin-top: 40rpx;
}
.amount{
  display: block;
}
.count{
  display: block;
  margin-top: 30rpx;
}
.body{
  height: 300rpx;
  text-shadow: 0px 1px #000;
  position: relative;
  overflow: hidden;
}
.block .foot{
  height: 80rpx;
  color: #414141;
  text-align: left;
  padding: 0 20rpx;
}
.block .foot button{
  background: transparent;
  border: none;
  padding: 0 0 0 30rpx;
  line-height: 80rpx;
}
.block .foot button::after{
  border: none;
}
.block .foot image{
  width:33rpx;
  height: 33rpx;
}
.qrcode{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 80rpx;
  left: 67rpx;
  display: none;
}
.qrcode.show{
  display: block;
}
.qrIcon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 0;
  right: 0;
  background: #fff;
}
.qrIcon image{
  width: 32rpx;
  height: 32rpx;
  margin: 9rpx;
}
.trangle_wrapper{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 32rpx;
  height: 32rpx;
  overflow: hidden;
}
.trangle{
  width: 45rpx;
  height: 45rpx;
  transform: rotate(-45deg);
  left: -65%;
  top: 25%;
  position: absolute;
}