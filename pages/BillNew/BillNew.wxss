.wrapper{
  width: 690rpx;
  margin: 0 auto;
}
.card{
  background: #fff;
  margin: 30rpx 0;
  box-shadow: 2px 2px 5px #ebebeb;
  border-radius: 5px;
  padding: 20rpx 0 20rpx 40rpx;
}
.row{
  width: 620rpx;
  justify-content:space-between;
  padding: 50rpx 30rpx 10rpx 0;
  font-size: 25rpx;
}
canvas{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.title{
  font-weight: bold;
  font-size: 30rpx;
}
.id_row{
  margin-left: -30rpx;
}
.id_row .number{
  display: inline-block;
  background: #f8f8f8;
  padding: 0 20rpx;
  font-size: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
  border:solid 1px #bfbfbf;
  margin: 40rpx 20rpx;
}
.share_tip {
  font-weight: 200;
}
.share_tip .fz-13{
  color: #54d086;
  margin-left: 30rpx;
}
button{
  margin-top: 30rpx;
}