page{
  background: #fff;
}
.empty image{
  width: 366rpx;
  height: 279rpx;
  margin: 184rpx auto 30rpx auto;
}
.empty text{
  color: #888888;
  margin-bottom: 80rpx;
}
.empty button{
  width: 322rpx;
}

.top_title{
  padding: 20rpx;
}
.addIcon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.card-wrapper{
  width: 750rpx;
  height: 430rpx;
  margin: 20rpx 0;
  overflow: hidden; 
  position: relative;
}
.card{
  width: 560rpx;
  height: 360rpx;
  border-radius: 5px;
  display:none; 
  position: absolute;
  transition: all .5s ;
  color: #fff;
  text-shadow: 0px 1px #000;
}
.card.prev,.card.next,.card.current{
  display: block;
}
.card.current{
  left: 95rpx;
  z-index: 100;
}
.card.prev{
  transform: scale(.9);
  left: -465rpx;
}
.card.next{
  transform: scale(.9);
  left: 655rpx;
}
.card .title{
  margin: 20rpx 30rpx 10rpx 30rpx;
  font-size: 34rpx;
}
.title-underline{
  width: 100%;
  height: 1px;
}
.blue .title-underline{
  background: #3c9fee;
}
.orange .title-underline{
  background: #f19149;
}
.green .title-underline{
  background: #009944;
}
.userPhotos{
  width: 100%;
  height: 100rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}
.userPhoto{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: solid 2px #fff;
  background: #fff;
  margin-right: 10rpx;
}
.payer-icon{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  position: absolute;
  left: -10rpx;
  top: -10rpx;
}
.payer-icon image{
  width: 23rpx;
  height: 34rpx;
  margin-left: 5rpx;
}
.blue .payer-icon{
  background: #08b6fa;
}
.orange .payer-icon{
  background: #feb527;
}
.green .payer-icon{
  background: #4fc560;
}

.divider{
  height: 70rpx;
  background: #f0efef;
}

.list-view{
  position: absolute;
  bottom: 0;
  top: 540rpx;
  width: 750rpx;
  overflow: scroll;
}
.result{
  width: 710rpx;
  margin: 20rpx;
  box-shadow: 1px 1px 3px #ccc;
}
.userInfo{
  width: 146rpx;
  height: 180rpx;
}
.userPhoto.abs{
  position: absolute;
  top: 0;
}
.userPhoto.extra{
  display: none;
}
.userInfo text{
  width: 150rpx;
  height: 30rpx;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
}
.userInfo image{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
}
.payInfo{
  width: 417rpx;
}
.arrowPay{
  width: 417rpx;
  height: 13rpx;
}